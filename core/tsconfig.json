{
    "compilerOptions": {
        "lib": ["ESNext"],
        "module": "NodeNext",
        "target": "ESNext",
        "moduleResolution": "Node16",
        "noImplicitAny": false,
        "sourceMap": false,
        "declaration": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "rootDirs":[
            "src",
            "tests"
        ],
        "outDir": "dist"
    },
    "exclude": [
        "dist",
        "tests"
    ]
}
