{
    "compilerOptions": {
        "lib": [
            "ESNext"
        ],
        "target": "ESNext",
        "module": "NodeNext",
        "moduleResolution": "nodenext",
        "declaration": true,
        "strict": true,
        "skipLibCheck": true,
        "noFallthroughCasesInSwitch": true,
        "experimentalDecorators": true,
        "noEmitOnError": true,
        "outDir": "dist",
        "rootDir": "src"
    },
    "exclude": [
        "dist"
    ]
}
