{
    "compilerOptions": {
        "lib": ["ESNext"],
        "target": "ESNext",
        "module": "NodeNext",
        "moduleResolution": "Node16",
        "declaration": true,
        "strict": true,
        "skipLibCheck": true,
        "noFallthroughCasesInSwitch": true,
        "noEmitOnError": true,
        "outDir": "dist",
        "rootDir": "src"
    },
    "exclude": [
        "base",
        "dist",
        "project_base"
    ]
}
