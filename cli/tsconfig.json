{
    "compilerOptions": {
        "lib": ["ES2022"],
        "target": "ES2022",
        "module": "CommonJS",
        "moduleResolution": "node10",
        "declaration": true,
        "strict": true,
        "skipLibCheck": true,
        "noFallthroughCasesInSwitch": true,
        "noEmitOnError": true,
        "outDir": "dist",
        "rootDir": "src"
    },
    "exclude": [
        "base",
        "dist"
    ]
}
